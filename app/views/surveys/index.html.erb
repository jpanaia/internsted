<p id="notice"><%= notice %></p>

<h2>Surveys</h2>

<table class="table">
  <thead>
    <tr>
      <th>Start Date</th>
      <th>Duration</th>
      <th>Pay</th>
      <th>Position</th>
      <th>Commitment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.date %></td>
        <td><%= survey.duration %></td>
        <td><%= survey.pay %></td>
        <td><%= survey.position %></td>
        <td><%= survey.full_part_time %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
